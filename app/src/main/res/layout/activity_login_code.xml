<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:fontFamily="@font/nunito_bold"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:text="Kode Keluarga" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Ketikkan kode keluarga yang Ayah Bunda miliki disini" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="274dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/style_form"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="A1B2C3"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="179dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Dengan menekan tombol masuk berarti Anda menyetujui"
        android:textAlignment="center"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="-20dp"
        android:fontFamily="@font/rubik_regular"
        android:text="dan"
        android:textAlignment="center"
        android:textSize="9sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="274dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="188dp"
        android:background="@drawable/style_yellow_button"
        android:text="Masuk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/rubik_regular"
            android:text="Belum punya kode keluarga?"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="23dp"
            android:width="274dp"
            android:textColor="#fff"
            android:background="@drawable/style_blue_button"

            android:text="Beli Kode Keluarga Disini" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Ketentuan Pengguna"
        android:textSize="9sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Kebijakan Data"
        android:textSize="9sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="29dp"
        android:fontFamily="@font/rubik_regular"
        android:text="kami"
        android:textSize="9sp
" />
</RelativeLayout>